<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F7F4FF"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Resumen Semanal"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4B0082"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnAnalizar"
        android:text="Analizar Semana"
        android:backgroundTint="#9575CD"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvResumen"
            android:padding="16dp"
            android:background="@drawable/bg_tarjeta_resumen"
            android:textColor="#333333"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí aparecerá tu resumen reflexivo..."
            android:fontFamily="serif"
            android:textIsSelectable="true" />
    </ScrollView>
    <Button
        android:id="@+id/btnCompartir"
        android:text="Compartir Resumen"
        android:backgroundTint="#81C784"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />
</LinearLayout>