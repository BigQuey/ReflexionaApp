<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF8E1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Emoji decorativo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🕰️"
            android:textSize="100sp"
            android:layout_marginBottom="20dp" />

        <!-- Título elegante -->
        <TextView
            android:text="Configura tu Recordatorio Diario"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4E342E"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Hora -->
        <TextView
            android:id="@+id/tvHoraSeleccionada"
            android:text="6:30"
            android:textSize="50sp"
            android:textColor="#1B5E20"
            android:background="#C8E6C9"
            android:padding="18dp"
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp" />

        <!-- Botón hora -->
        <Button
            android:id="@+id/btnSeleccionarHora"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#AED581"
            android:text="Elegir Hora"
            android:textAllCaps="false"
            android:textColor="#000" />

        <!-- Mensaje -->
        <EditText
            android:id="@+id/etMensaje"
            android:hint="Escribe tu mensaje personalizado"
            android:text="No olvides escribir tu día 🌟"
            android:layout_marginTop="24dp"
            android:padding="14dp"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Switch activación -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Activar recordatorio"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/switchRecordatorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Repetir -->
        <TextView
            android:text="¿Qué días deseas repetir?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Selector días -->
        <LinearLayout
            android:id="@+id/selectorDias"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:text="GUARDAR"
            android:textAllCaps="true"
            android:backgroundTint="#FFB74D"
            android:textColor="#000"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>